ang1=int(input("Valor do ângulo:"))
compl=90-ang1
print("Seun angulo complementar vai ser =",compl)



comp=float(input())
larg=float(input())

print("Área:",comp*larg)
print("Perímetro:",comp*2+larg*2)


n=int(input())
num=0
for i in range(n+1):
    num+=1
    n=n*(n-num)

print(n)
